10 INPUT "Digite a temperatura em Celsius: "; Celsius

30 Kelvin = Celsius * 100 + 27315  
40 Fahreneit = (Celsius * 9 / 5 + 32) * 100

50 PRINT "Temperatura em Celsius: "
51 PRINT Celsius

60 PRINT "Temperatura em Kelvin: "
61 PRINT Kelvin / 100

70 PRINT "Temperatura em Fahrenheit: "
71 PRINT Fahrenheit / 100

80 END
