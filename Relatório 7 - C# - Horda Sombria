using System;

namespace HordaSombria
{
    // Classe base abstrata
    abstract class MonstroSombrio
    {
        public string Nome;

        public MonstroSombrio(string nome)
        {
            Nome = nome;
        }

        // Método virtual para ser sobrescrito
        public virtual void Mover()
        {
            Console.WriteLine($"{Nome} se move de forma sombria...");
        }
    }

    // Classe Zumbi (herda de MonstroSombrio)
    class Zumbi : MonstroSombrio
    {
        public Zumbi(string nome) : base(nome) { }

        public override void Mover()
        {
            Console.WriteLine($"{Nome} anda lentamente, arrastando os pés...");
        }
    }

    // Classe Espectro (herda de MonstroSombrio)
    class Espectro : MonstroSombrio
    {
        public Espectro(string nome) : base(nome) { }

        public override void Mover()
        {
            Console.WriteLine($"{Nome} desliza rapidamente pelas sombras...");
        }
    }

    class Program
    {
        static void Main(string[] args)
        {
            // Criando array de monstros
            MonstroSombrio[] horda = new MonstroSombrio[2];
            horda[0] = new Zumbi("Zumbi Lento");
            horda[1] = new Espectro("Espectro Veloz");

            // Percorrendo e chamando Mover()
            Console.WriteLine("=== Horda Sombria se aproxima ===");
            foreach (MonstroSombrio monstro in horda)
            {
                monstro.Mover();
            }

        }
    }
}
