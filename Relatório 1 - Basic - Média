INPUT "DIGITE A PRIMEIRA NOTA: ", NOTA1
INPUT "DIGITE A SEGUNDA NOTA: ", NOTA2

MEDIA = (NOTA1 + NOTA2) / 2

IF MEDIA > 60 THEN
    PRINT "APROVADO DIRETO"
ELSE IF MEDIA < 30 THEN
    PRINT "REPROVADO DIRETO"
ELSE
    INPUT "DIGITE A NOTA DA NP3: ", NP3
    NOVAMEDIA = (MEDIA + NP3) / 2

    IF NOVAMEDIA > 50 THEN
        PRINT "APROVADO PELA NP3"
    ELSE
        PRINT "REPROVADO NA NP3"
    END IF
END IF
