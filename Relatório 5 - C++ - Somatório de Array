#include <iostream>
using namespace std;

float somarArray(float arr[], int tamanho) {
    float soma = 0;
    for (int i = 0; i < tamanho; i++) {
        soma += arr[i];
    }
    return soma;
}

int main() {
    int tamanho;
    cout << "Digite o tamanho do array: ";
    cin >> tamanho;

    float valores[tamanho];
    cout << "Digite " << tamanho << " valores float:\n";
    for (int i = 0; i < tamanho; i++) {
        cout << "Valor " << i + 1 << ": ";
        cin >> valores[i];
    }

    float resultado = somarArray(valores, tamanho);
    cout << "Somatorio dos valores: " << resultado << endl;

    return 0;
}
