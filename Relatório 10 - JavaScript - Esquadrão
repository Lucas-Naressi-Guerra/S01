// Simulação da Interface IExplorador
class IExplorador {
  explorarTerritorio() {
    throw new Error("Método 'explorarTerritorio()' deve ser implementado.");
  }
}

// Classe ODM_Gear
class ODM_Gear {
  constructor(modelo) {
    this.modelo = modelo;
  }

  usar() {
    return `Usando o equipamento ODM (${this.modelo}) para se mover rapidamente!`;
  }
}

// Classe Soldado que implementa a interface IExplorador
class Soldado extends IExplorador {
  #gear; // atributo protegido

  constructor(nome, gear) {
    super();
    this.nome = nome;
    this.#gear = gear;
  }

  explorarTerritorio() {
    return `${this.nome} está explorando o território. ${this.#gear.usar()}`;
  }

  verificarEquipamento() {
    return `Equipamento do ${this.nome}: ${this.#gear.modelo}`;
  }
}

// Classe Esquadrão
class Esquadrao extends IExplorador {
  constructor(lider, membrosIniciais = []) {
    super();
    this.lider = lider;
    this.membros = membrosIniciais;
  }

  adicionarMembro(soldado) {
    if (!(soldado instanceof IExplorador)) {
      throw new Error("O soldado deve implementar IExplorador!");
    }
    this.membros.push(soldado);
    console.log(`${soldado.nome} foi adicionado ao esquadrão.`);
  }

  explorarTerritorio() {
    console.log(`--- Esquadrão liderado por ${this.lider.nome} iniciando exploração ---`);
    return this.membros.map(m => m.explorarTerritorio());
  }

  relatarStatus() {
    return this.membros.map(m => m.verificarEquipamento());
  }
}

// Demonstração
const gear1 = new ODM_Gear("Modelo X-1");
const gear2 = new ODM_Gear("Modelo Y-2");
const gear3 = new ODM_Gear("Modelo Z-3");

const levi = new Soldado("Capitão Levi", gear1);
const mikasa = new Soldado("Mikasa Ackerman", gear2);
const eren = new Soldado("Eren Yeager", gear3);

const esquadrao = new Esquadrao(levi, [mikasa]);
esquadrao.adicionarMembro(eren);

console.log("\n=== EXPLORAÇÃO ===");
esquadrao.explorarTerritorio().forEach(msg => console.log(msg));

console.log("\n=== STATUS DO EQUIPAMENTO ===");
esquadrao.relatarStatus().forEach(msg => console.log(msg));
